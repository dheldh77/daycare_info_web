
<div class="container">
    <h2>아이</h2>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">이름</th>
          <%# <th scope="col">작성자</th> %>
          <th scope="col">소속 유치원</th>
        </tr>
      </thead>
      <tbody>
        
        <% @children.each do |c| %>  
            <tr>
              <th scope="row"><%= c.id %></th>
                <td> <a href="/children/show/<%= c.id %>"><%= c.name %></a>  </td>
              <%# <td><%= p.user.username %>
              <td>ㅇㅇ유치원</td>
            </tr>
        <% end %>
        
      </tbody>
    </table>
    <% if current_user.usertype == "teacher" %>
    <a href="/children/new">
        <button type="button" class="btn btn-dark">아이 등록</button>
    </a>

    <% else %>
    <!-- 추후 아이 찾기 url 등록-->
    <% end %>

    <a href="/">
        <button type="button" class="btn btn-dark">홈</button>
    </a>
</div>