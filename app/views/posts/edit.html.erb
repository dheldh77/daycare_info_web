<div class="container">
    <!--주소창으로 보낼 수 있는 건 전부 get, 그 외 데이터를 첨부하면 post-->
    <form action="/posts/update/<%= @post.id %>" method="post">
      <div class="form-group">
        <label for="exampleFormControlInput1">제목</label>
        <input name="input_title" value="<%= @post.title %>" type="text" class="form-control" id="exampleFormControlInput1" placeholder="제목을 입력하세요">
      </div>
      
      <div class="form-group">
        <label for="exampleFormControlTextarea1">내용</label>
        <textarea name="input_content" class="form-control" id="exampleFormControlTextarea1" rows="10" placeholder="내용을 입력하세요"><%= @post.content %></textarea>
      </div>
      
      <button type="submit" class="btn btn-dark">수정</button> 
    </form>
</div>
